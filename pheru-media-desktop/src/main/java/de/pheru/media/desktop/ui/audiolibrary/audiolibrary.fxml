<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.pheru.media.desktop.ui.audiolibrary.AudioLibraryPresenter">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <VBox VBox.vgrow="ALWAYS">
        <Label text="Aktuelle Audiobibliothek:"/>
        <HBox VBox.vgrow="ALWAYS">
            <ListView fx:id="audioLibrariesListView" prefHeight="100"/>
            <VBox>
                <Button text="+" onAction="#createAudioLibrary"/>
                <Button text="-" onAction="#deleteAudioLibrary"/>
            </VBox>
        </HBox>
    </VBox>
    <VBox VBox.vgrow="ALWAYS">
        <Label text="Verzeichnisse:"/>
        <HBox VBox.vgrow="ALWAYS">
            <ListView fx:id="directoriesListView" prefHeight="100"/>
            <VBox>
                <Button text="+" onAction="#addDirectory"/>
                <Button text="-" onAction="#removeDirectory"/>
            </VBox>
        </HBox>
    </VBox>
    <HBox alignment="BOTTOM_RIGHT" spacing="5" VBox.vgrow="NEVER">
        <Button fx:id="confirmButton" text="BestÃ¤tigen" onAction="#confirm"/>
        <Button text="Abbrechen" onAction="#cancel"/>
    </HBox>
</VBox>
