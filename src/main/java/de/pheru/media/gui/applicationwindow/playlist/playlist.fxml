<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import de.pheru.fx.focus.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="300.0" 
      xmlns="http://javafx.com/javafx/8" fx:controller="de.pheru.media.gui.applicationwindow.playlist.PlaylistPresenter">
    <children>
        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <children>
                <Label fx:id="playlistNameLabel" minWidth="-Infinity" text="&lt;Neue Wiedergabeliste&gt;" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="titlesSize" text="0" />
                <Label text=" Titel" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <children>
                <MenuButton fx:id="actionsMenuButton" mnemonicParsing="false" text="Aktionen...">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadPlaylist" text="Laden..." />
                        <Menu fx:id="saveMenu" mnemonicParsing="false" text="Speichern...">
                            <items>
                                <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" onAction="#savePlaylist" text="Speichern" />
                                <MenuItem mnemonicParsing="false" onAction="#savePlaylistAs" text="Speichern unter..." />
                            </items>
                        </Menu>
                        <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" onAction="#deletePlaylist" text="Löschen..." />
                    </items>
                </MenuButton>
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="totalDurationLabel" text="00:00:00" />
            </children>
        </HBox>
        <TableView fx:id="table" onKeyReleased="#tableKeyReleased" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="Wiedergabeliste enthält keine Titel" />
            </placeholder>
            <columns>
                <TableColumn sortable="false" text="Titel">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="40.0" minWidth="40.0" sortable="false" text="Dauer">
                    <cellValueFactory>
                        <PropertyValueFactory property="formattedDuration" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem onAction="#play" text="Wiedergabe" />
                        <MenuItem onAction="#remove" text="Entfernen" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </children>
    <fx:define>
        <FocusTraversalGroup fx:id="playlistGroup">
            <nodes>
                <fx:reference source="actionsMenuButton"/>
                <fx:reference source="table"/>
            </nodes>
        </FocusTraversalGroup>
    </fx:define>
</VBox>
